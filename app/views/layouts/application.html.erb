<!DOCTYPE html>
<html>
<head>
  <title>Virtucoach</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <div id="header">
      
      <span id="menubar">
        <% if logged_in? %>
         <ul>
            <li><%= "Welcome, #{current_user.first_name}" %> | </li>
            <li><%= link_to "Workouts", workouts_url %> | </li> 
            <li><%= link_to "Account", user_url(current_user) %> | </li> 
            <li><%= link_to "Help", "#"  %> | </li> 
            <li><%= link_to "Logout", sessions_url, method: :delete %></li>
          </ul>
        <% else %>
          <ul>
            <%= form_tag(sessions_url) do %>
              <li><%= text_field_tag :email, nil, placeholder: "joe@example.com" %></li>
              <li><%= password_field_tag :password, nil, placeholder: "password" %></li>
              <%= submit_tag "Sign In" %>
            <% end %>
          </ul>
        <% end %>   
      </span>
    
      <div id="name">
         <%= link_to image_tag("TrainingCal_logo.png"), root_url %>
      </div>
    
    </div>
  
    <div class="clear"></div>
  
    <% if flash[:notice] %>
      <div id="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
  

    <%= yield %>
    <div class="clear"></div>
  </div>

</body>
</html>
